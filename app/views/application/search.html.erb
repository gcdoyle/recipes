<div class="container" id="search-results">
	<div class="row">
		<div class="col">
			<p class="mt-4">Searching for: <small><%= params[:q] %></small></p>
		</div>
	</div>
	<div class="row">
			<% unless @recipes.blank? %>
        <% @recipes.each do |recipe| %>
          <div class="col col-md-3 mt-3 text-center">
            <%= link_to image_tag(recipe.image.variant(resize_to_limit: [240, 240]), class: 'd-flex mr-3 d-block'), recipe_path(recipe) %>
            <%= link_to recipe.name, recipe_path(recipe), style: "font-size: large;color: black" %>
          </div>
        <% end %>

		<% else %>
			<p style="padding-left: 35px;">No results found</p>
		<% end %>
		</div>

  </div>

</div>